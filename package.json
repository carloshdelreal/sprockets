{
  "name": "sprockets",
  "private": true,
  "version": "1.0.0",
  "repository": "git@github.com:carloshdelreal/sprockets.git",
  "author": "Carlos Del Real <carloshdelreal@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "yarn dev:start",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:create": "sequelize db:create",
    "db:drop": "sequelize db:drop",
    "db:new": "sequelize db:drop && yarn db:create && yarn db:migrate",
    "db:new:seed": "sequelize db:drop && yarn db:create && yarn db:migrate && yarn db:seed",
    "db:truncate": "ts-node src/scripts/truncate.ts",
    "db:start": "docker-compose up --build --remove-orphans -d",
    "dev:long": "concurrently \"yarn db:start && yarn db:new:seed && yarn dev:start\"",
    "dev:start": "nodemon src/index.ts",
    "lint": "yarn prettier && yarn lint:ci --fix",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "lint:ci": "eslint --ext .js,.ts .",
    "prettier": "prettier --write --loglevel warn .",
    "pretest": "yarn test:set:env",
    "test:set:env": "ts-node src/scripts/setTestEnv.ts",
    "test": "TEST=true jest --runInBand --detectOpenHandles --watchAll"
  },
  "dependencies": {
    "@hapi/basic": "^6.0.0",
    "@hapi/boom": "^9.1.4",
    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.5",
    "@hapi/joi": "^17.1.1",
    "@hapi/jwt": "^2.1.0",
    "@hapi/vision": "^6.1.0",
    "@types/node": "^17.0.21",
    "bcryptjs": "^2.4.3",
    "blipp": "^4.0.2",
    "hapi-auth-jwt2": "^10.2.0",
    "hapi-swagger": "^14.2.5",
    "joi": "^17.6.0",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.3",
    "sequelize": "^6.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.0",
    "@faker-js/faker": "^6.0.0-beta.0",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "concurrently": "^7.1.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "sequelize-cli": "6.4.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
